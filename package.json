{
  "name": "game",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "docker:build": "docker build -t r3f-game:latest .",
    "docker:run": "docker run -p 3000:3000 -e NODE_ENV=production r3f-game:latest",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "k8s:deploy": "./deploy.sh",
    "k8s:delete": "kubectl delete -f k8s/",
    "k8s:logs": "kubectl logs -f deployment/r3f-game-deployment",
    "k8s:status": "kubectl get pods,services -l app=r3f-game"
  },
  "dependencies": {
    "@react-three/drei": "^9.99.0",
    "@react-three/fiber": "^8.15.16",
    "@react-three/rapier": "^1.3.0",
    "@types/three": "^0.161.2",
    "next": "^14.2.33",
    "playroomkit": "^0.0.67",
    "react": "^18",
    "react-dom": "^18",
    "three": "^0.161.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
